{
	"lexicon": 1,
	"id": "games.gamesgamesgamesgames.getGames",
	"defs": {
		"main": {
			"type": "query",
			"description": "Get a list of games on the network.",
			"parameters": {
				"type": "params",
				"properties": {
					"limit": {
						"type": "integer",
						"minimum": 1,
						"maximum": 100,
						"default": 50
					}
				}
			},
			"output": {
				"encoding": "application/json",
				"schema": {
					"type": "object",
					"required": ["games"],
					"properties": {
						"cursor": { "type": "string" },
						"games": {
							"type": "array",
							"items": {
								"type": "ref",
								"ref": "games.gamesgamesgamesgames.defs#gameSummaryView"
							}
						}
					}
				}
			}
		}
	}
}
