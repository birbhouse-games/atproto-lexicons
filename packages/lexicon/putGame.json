{
	"lexicon": 1,
	"id": "games.gamesgamesgamesgames.putGame",
	"defs": {
		"main": {
			"type": "procedure",
			"description": "Stores a game record in the user's repo.",
			"input": {
				"encoding": "application/json",
				"schema": {
					"type": "object",
					"required": [
						"name",
						"summary"
					],
					"properties": {
						"name": { "type": "string" },
						"modes": {
							"type": "ref",
							"ref": "games.gamesgamesgamesgames.defs#mode"
						},
						"genres": {
							"type": "ref",
							"ref": "games.gamesgamesgamesgames.defs#genre"
						},
						"playerPerspective": {
							"type": "ref",
							"ref": "games.gamesgamesgamesgames.defs#playerPerspective"
						},
						"summary": { "type": "string" },
						"theme": {
							"type": "ref",
							"ref": "games.gamesgamesgamesgames.defs#theme"
						},
						"createdAt": {
							"type": "string",
							"format": "datetime"
						},
						"parent": {
							"type": "string",
							"format": "at-uri"
						},
						"relatedOrganizations": {
							"type": "array",
							"minLength": 1,
							"items": {
								"type": "string",
								"format": "at-uri"
							}
						},
						"releaseDates": {
							"type": "array",
							"items": {
								"type": "ref",
								"ref": "games.gamesgamesgamesgames.defs#releaseDate"
							}
						},
						"type": {
							"type": "ref",
							"ref": "games.gamesgamesgamesgames.defs#type"
						}
					}
				}
			},
			"output": {
				"encoding": "application/json",
				"schema": {
					"type": "object",
					"required": ["status"],
					"properties": {
						"status": {
							"type": "ref",
							"ref": "games.gamesgamesgamesgames.defs#gameDetailView"
						}
					}
				}
			}
		}
	}
}
